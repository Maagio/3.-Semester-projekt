@model Evalulet.Models.Teacher.SurveyModel;

<body style="background-image: url('https://www.planwallpaper.com/static/images/Alien_Ink_2560X1600_Abstract_Background_1.jpg');">
    <style>
        body {
            background-size: cover;
        }
    </style>

    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">

            <div class="lh-100">
                <h5 class="mb-0 text-white lh-100">Evalulet</h5>
                <small>Since 2018</small>
            </div>
        </div>

        @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-8 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="badge badge-secondary badge-pill">Undersøgelse: @Model.Header</span>
                    <span class="badge badge-secondary badge-pill">Fag: @Model.Class</span>
                    <span class="badge badge-secondary badge-pill">Hold: @Model.Team</span>
                </h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="badge badge-secondary badge-pill">Lære email: @Model.Email</span>
                <span class="badge badge-secondary badge-pill">Dato: @Model.Dato</span>
                <span class="badge badge-secondary badge-pill">Elevkode: @Model.ElevKode</span>
                </h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="badge badge-secondary badge-pill">Fritekst: @Model.FreeText</span>
                    </h4>

                    <h3>Fordele</h3>
                    <ul class="list-group mb-3">
                        @foreach (var answer in Model.surveyFordele)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">@answer.Answer</h6>
                            </div>
                            <span class="text-muted">@answer.LikeCounter</span>
                        </li>
                }
                    </ul>

                    <br />
                    <h3>Forbedringer</h3>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            @foreach (var answer in Model.surveyForbedringer)
                        {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">@answer.Answer</h6>
                            </div>
                            <span class="text-muted">@answer.LikeCounter</span>
                        </li>
                }
                        </ul>

                        <small class="d-block text-right mt-3">
                            <button type="submit" class="btn btn-outline-primary">Print PDF</button>
                        </small>
                    </div>
                </div>
        }

    </main>
</body>
